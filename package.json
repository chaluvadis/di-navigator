{
  "name": "di-service-navigator",
  "displayName": "DI Service Navigator",
  "publisher": "nomad-in-code",
  "description": "Visualize and explore Dependency Injection registrations and injection sites in your C# projects",
  "version": "0.0.1",
  "icon": "./icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/di-navigator"
  },
  "homepage": "https://github.com/chaluvadis/di-navigator",
  "bugs": {
    "url": "https://github.com/chaluvadis/di-navigator/issues"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.csproj",
    "workspaceContains:**/*.sln"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "di-navigator.analyzeProject",
        "title": "DI Navigator: Analyze Project"
      },
      {
        "command": "di-navigator.findInjectionSites",
        "title": "DI Navigator: Find Injection Sites"
      },
      {
        "command": "di-navigator.detectConflicts",
        "title": "DI Navigator: Detect Conflicts"
      },
      {
        "command": "di-navigator.openConfiguration",
        "title": "DI Navigator: Open Configuration"
      },
      {
        "command": "di-navigator.refreshTreeView",
        "title": "DI Navigator: Refresh Tree View"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "diNavigator",
          "name": "DI Services",
          "icon": "./icon.png",
          "when": "diNavigator:validWorkspace"
        }
      ]
    },
    "configuration": {
      "title": "DI Navigator",
      "properties": {
        "di-navigator.useExternalTools": {
          "type": "boolean",
          "default": true,
          "description": "Use external tools (dotnet CLI, Roslyn) for analysis"
        },
        "di-navigator.analysisDepth": {
          "type": "string",
          "enum": ["basic", "standard", "deep"],
          "default": "standard",
          "description": "Depth of dependency injection analysis"
        },
        "di-navigator.showInjectionSites": {
          "type": "boolean",
          "default": true,
          "description": "Show injection sites in the analysis"
        },
        "di-navigator.detectCycles": {
          "type": "boolean",
          "default": true,
          "description": "Detect circular dependencies"
        },
        "di-navigator.highlightConflicts": {
          "type": "boolean",
          "default": true,
          "description": "Highlight conflicting service registrations"
        },
        "di-navigator.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh analysis when files change"
        },
        "di-navigator.refreshInterval": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Auto-refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node --no-warnings .vscode-test.mjs",
    "dpackage": "npm run compile && vsce package",
    "build-roslyn-tool": "cd roslyn-tool && dotnet build",
    "test-roslyn-tool": "cd roslyn-tool && dotnet run -- --input ../test-project",
    "package-with-roslyn": "npm run build-roslyn-tool && npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.5.2",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2",
    "@vscode/vsce": "^3.6.1"
  }
}