{
  "name": "di-service-navigator",
  "displayName": "DI Service Navigator",
  "publisher": "nomad-in-code",
  "description": "Visualize and explore Dependency Injection registrations and injection sites in your C# projects",
  "version": "0.0.1",
  "icon": "./icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/di-navigator"
  },
  "homepage": "https://github.com/chaluvadis/di-navigator",
  "bugs": {
    "url": "https://github.com/chaluvadis/di-navigator/issues"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.csproj",
    "workspaceContains:**/*.sln"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "di-navigator.selectProject",
        "title": "DI Navigator: Select Project"
      },
      {
        "command": "di-navigator.clearProjectSelection",
        "title": "DI Navigator: Clear Project Selection"
      },
      {
        "command": "di-navigator.refreshServices",
        "title": "DI Navigator: Refresh Services"
      },
      {
        "command": "di-navigator.goToImplementation",
        "title": "DI Navigator: Go to Implementation"
      },
      {
        "command": "di-navigator.goToInjectionSite",
        "title": "DI Navigator: Go to Injection Site"
      },
      {
        "command": "di-navigator.resolveConflicts",
        "title": "DI Navigator: Resolve Conflicts"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "diNavigator",
          "name": "DI Navigator",
          "icon": "./icon.png",
          "when": "diNavigator:validWorkspace"
        }
      ]
    }
  },
  "configuration": {
    "title": "DI Navigator",
    "properties": {
      "diNavigator.excludeFolders": {
        "type": "array",
        "default": [
          "**/bin/**",
          "**/obj/**",
          "**/Properties/**"
        ],
        "description": "Glob patterns for folders to exclude from file scanning (e.g., build artifacts).",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node --no-warnings .vscode-test.mjs"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.5.1",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  }
}